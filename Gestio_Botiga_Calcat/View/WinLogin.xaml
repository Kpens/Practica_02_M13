<Window x:Class="Gestio_Botiga_Calcat.View.UILogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestio_Botiga_Calcat.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login" Height="500" Width="500">
    <Grid Margin="10 15 10 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
<!--        <Button x:Name="btnBack" Click="btnBack_Click" Content="Back" FontFamily="Agency FB" Foreground="White" Background="Black" HorizontalAlignment="Left" Padding="5" FontSize="20"/>

        <Button x:Name="btnCart" Click="btnCart_Click" FontFamily="Agency FB" Grid.Column="1" Foreground="Black" Background="White" BorderBrush="White" HorizontalAlignment="Right" Padding="5" FontSize="20">
            <StackPanel Orientation="Horizontal">
                <Image Source="../imgs/shopping-cart.png" Width="30" Height="30" Margin="0 0 5 0"/>
                <TextBlock x:Name="tbNumProds" Text="0" Visibility="Hidden" TextAlignment="Center" Height="20" Width="20" Background="Black" Foreground="White" FontSize="16" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>-->
        <Grid x:Name="grIniSes" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Iniciar Sessió" Margin="0 30 0 0" Grid.Column="1" FontFamily="Agency FB" FontSize="45" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Margin="0 30 0 0">
                <TextBlock Text="Nom: " FontFamily="Agency FB" FontSize="25"/>
                <TextBox x:Name="tbLogin" Margin="70 0 0 0" BorderThickness="1" BorderBrush="Black" FontFamily="Agency FB" FontSize="25" Width="175"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Grid.Row="2" Grid.Column="1" Margin="0 30 0 0">
                <TextBlock Text="Contrasenya: " FontFamily="Agency FB" FontSize="25"/>
                <PasswordBox x:Name="tbContra" Margin="5 0 0 0" BorderThickness="1" BorderBrush="Black" FontFamily="Agency FB" FontSize="20" Width="175"/>
            </StackPanel>
            <Button x:Name="btEntrar" Click="btEntrar_Click" Grid.Row="3" Grid.Column="1" Content="Entrar" FontFamily="Agency FB" Foreground="White" Background="Black" Margin="0,100,0,10" FontSize="25"/>

        </Grid>
        <StackPanel x:Name="spNoProds" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical" Grid.RowSpan="4" Grid.ColumnSpan="3" Grid.Row="1" Margin="80 0 0 50">
            <Label Content="Ja has iniciat sessió" Grid.Column="1" Grid.Row="1" FontFamily="Agency FB" FontSize="45" FontWeight="Bold"/>
            <Label Content="Esperem que tinguis un bon dia!" FontFamily="Agency FB" Margin="0 30 0 0" FontSize="20"/>
            <Button x:Name="btSortir" Click="btSortir_Click" Content="Tencar sessió" Padding="10" HorizontalAlignment="Left" FontFamily="Agency FB" Foreground="White" Background="Black" Margin="5 20 0 0" FontSize="20"/>
        </StackPanel>

    </Grid>
</Window>
