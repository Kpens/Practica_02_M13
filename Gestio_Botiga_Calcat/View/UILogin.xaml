<Window x:Class="Gestio_Botiga_Calcat.View.UILogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestio_Botiga_Calcat.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="10 15 10 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnBack" Click="btnBack_Click" Content="Back" FontFamily="Agency FB" Foreground="White" Background="Black" HorizontalAlignment="Left" Padding="5" FontSize="20"/>

        <Image x:Name="btnCart" Source="../imgs/shopping-cart.png" Grid.Column="1" HorizontalAlignment="Right" Width="30" Height="30" Margin="0 0 20 0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Iniciar Sessió" Margin="10 0 0 0" Grid.Column="1" FontFamily="Agency FB" FontSize="45" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Margin="0 20 0 0">
                <TextBlock Text="Nom: " FontFamily="Agency FB" FontSize="20"/>
                <TextBox x:Name="tbLogin" Margin="55 0 0 0" BorderThickness="1" BorderBrush="Black" FontFamily="Agency FB" FontSize="20" Width="175"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Grid.Row="2" Grid.Column="1" Margin="0 20 0 0">
                <TextBlock Text="Contrasenya: " FontFamily="Agency FB" FontSize="20"/>
                <PasswordBox x:Name="tbContra" Margin="5 0 0 0" BorderThickness="1" BorderBrush="Black" FontFamily="Agency FB" FontSize="20" Width="175"/>
            </StackPanel>
            <Button Grid.Row="3" Grid.Column="1" Content="Entrar" FontFamily="Agency FB" Foreground="White" Background="Black" Margin="0,50,0,10" FontSize="25"/>

        </Grid>

    </Grid>
</Window>
